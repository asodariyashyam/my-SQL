<%- include("../header") %>

<style>
  /* General styles for the body */
  body {
    font-family: Arial, sans-serif; /* Set a default font */
    margin: 0; /* Remove default body margin */
    background-color: #f3f4f6; /* Light background color */
  }

  /* Styling for the header */
  header {
    background-color: #007bff; /* Blue background for the header */
    padding: 20px; /* Add padding around the header */
    text-align: center; /* Center-align the header text */
    color: white; /* White text color */
  }

  /* Heading styles */
  h2 {
    text-align: center; /* Center align the heading */
    color: #333; /* Darker color for the heading */
  }

  /* Table styles */
  table {
    border-collapse: collapse; /* Merge table borders */
    width: 95%; /* Full width */
    margin: 30px 30px 0px 38px;
  }

  th,
  td {
    border: 1px solid #ccc; /* Light gray border */
    padding: 10px; /* Padding inside cells */
    text-align: left; /* Align text to the left */
  }

  th {
    background-color: #007bff; /* Header background color */
    color: white; /* Header text color */
  }

  tr:nth-child(even) {
    background-color: #f2f2f2; /* Light gray for even rows */
  }
  .delete-button {
    color: white; /* Text color */
    background-color: rgba(195, 19, 19, 0.823); /* Button background color */
    padding: 10px 15px; /* Padding for button */
    border-radius: 5px; /* Rounded corners */
    text-decoration: none; /* Remove underline */
    display: inline-block; /* Make the link behave like a button */
    border: none; /* Remove default border */
    font-weight: bold; /* Optional: bold text */
    cursor: pointer; /* Change cursor to pointer on hover */
    transition: background-color 0.3s ease; /* Smooth background color change */
}

.delete-button:hover {
    background-color: rgba(165, 19, 19, 0.802); /* Change background on hover */
}


  tr:hover {
    background-color: #e0e0e0; /* Darker gray on hover */
  }

  /* Responsive adjustments */
  @media (max-width: 600px) {
    table,
    thead,
    tbody,
    th,
    td,
    tr {
      display: block; /* Make the table block on small screens */
    }

    th {
      position: absolute; /* Position headers absolutely */
      left: -9999px; /* Hide headers */
    }

    tr {
      margin-bottom: 10px; /* Space between rows */
      border: 1px solid #ccc; /* Border for rows */
    }

    td {
      text-align: right; /* Align text to the right */
      position: relative; /* Relative positioning */
      padding-left: 50%; /* Space on the left */
    }

    td:before {
      position: absolute; /* Positioning before element */
      left: 10px; /* Space from the left */
      width: calc(50% - 20px); /* Width calculation */
      padding-right: 10px; /* Space to the right */
      white-space: nowrap; /* Prevent wrapping */
    }

    /* Customize the content for each column */
    td:nth-of-type(1):before {
      content: "No";
    }
    td:nth-of-type(2):before {
      content: "Name";
    }
    td:nth-of-type(3):before {
      content: "Price";
    }
    td:nth-of-type(4):before {
      content: "Old Price";
    }
    td:nth-of-type(5):before {
      content: "Description";
    }
    
  }
</style>
<h2>Show Buyer List</h2>
<table border="2" width="100%">
  <tr>
    <th>no</th>
    <th>rmail</th>
    <th>role</th>
    <th>action</th>
 
  </tr>

  <% let no = 1; %> <% for (let i of data) { %>
  <tr>
    <td><%= no++ %></td>
    <td><%= i.email %></td>
    <td><%= i.role %></td>

    <% if (cookieData.role === "Admin") { %> 
        <td><a class="delete-button" href="/admin/admindeteldata?id=<%= i.id%>" style="color: rgb(13, 13, 13); text-decoration: none;">delete</a> </td>
       
    <%}%>
  </tr>
  <% } %>
</table>
